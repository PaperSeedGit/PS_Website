@model MvcApp1.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<div class="container z-depth-1" style="background: url(/Images/leatherbg.jpg) no-repeat center center">
    <div class="section" id="loginForm" style="width:300px;margin: 0px auto; padding:5px">
        <fieldset style="background-color:white;">
            <legend style="font-size:larger; font-weight:bolder">Login</legend>
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                
                    <div>
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @style = "color:red" })
                    </div>
                    <div>
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red" })
                    </div>
                    <div>
                        @Html.CheckBoxFor(m => m.RememberMe, new { @style = "position:inherit" })
                        @Html.LabelFor(m => m.RememberMe, new { })
                    </div>

                    <button class="btn waves-effect waves-light" type="submit" name="action" style="width:300px">
                        Login
                        <i class="mdi-content-send right"></i>
                    </button>                    
                
            }
            <div style="height: 1px; background-color: grey; text-align: center">
                <span style="background-color: white; position: relative; top: -0.5em;">
                    &nbsp; OR &nbsp;
                </span>
            </div>
            <div class=" section social" id="socialLoginForm">
                @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
            </div>
            @Html.ActionLink("Register", "Register") if you don't have an account.
        </fieldset>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
